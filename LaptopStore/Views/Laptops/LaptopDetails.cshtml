@model Laptop
<div class="row mt-2 mb-2">
    <div class="col-md-4" style="height:95%; display: block;">
        <div class="card mb-4 box-shadow justify-content-md-between">
            <img class="card-img-top" alt="@Model.name [100%x260]" style="height: 40%; width: 100%; display: block;" src="@Model.imgUrl" data-holder-rendered="true">
            <div class="card-body" style="height: 50%; width: 100%; display: block;">
                <h2>@Model.name</h2>
                <p class="card-text">@Model.shortDesc</p>
            </div>
            <div class="card-footer align-bottom" style="height: 10%; width: 100%; display: block;">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-warning" id="addToCart" asp-controller="Cart" asp-action="addToCart" asp-route-id="@Model.id">Add to cart</a>
                    </div>
                    <h5 class="text-muted">Price: @Model.price.ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8" style="height:95%; display: block;">
        <div class="card mb-4 box-shadow justify-content-md-between">
            <div class="card-body" style="height: 100%; width: 100%; display: block;">
                <h2>@Model.name</h2>
                <p class="card-text"><b>Description: </b>@Model.longDesc</p>
                <p class="card-text"><b>Available: </b>@Model.isAvailable</p>
            </div>
        </div>
    </div>
</div>